+{
+	g_return_if_fail (backend != NULL);
+
+	egg_debug ("pacman: cleaning up");
+
+	backend_destroy_downloads (backend);
+	backend_destroy_groups (backend);
+	backend_destroy_databases (backend);
+
+	if (pacman != NULL) {
+		g_object_unref (pacman);
+	}
+}
